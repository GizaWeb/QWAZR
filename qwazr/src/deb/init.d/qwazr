# QWAZR start
#

### BEGIN INIT INFO
# Provides:          qwazr
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start/stop QWAZR at boot time
# Description:       Enable service provided by QWAZR.
### END INIT INFO

OSS_NAME=qwazr

CONFIGFILE=/etc/qwazr.conf
if [ -f "$CONFIGFILE" ]; then
    . "$CONFIGFILE"
fi

if [ -z "$PUBLIC_ADDR" ]; then
    PUBLIC_ADDR=`hostname`
fi

OSS_SHARE=/usr/share/qwazr
OSS_JAR=$OSS_SHARE/$OSS_NAME.jar
JAVA_OPTS="$JAVA_OPTS -Dfile.encoding=UTF-8 -Dlog4j.configuration=file:$QWAZR_DATA/log4j.properties"
OSS_OPTS="$JAVA_OPTS -jar $OSS_JAR -l $LISTEN_ADDR -a $PUBLIC_ADDR -wp $WEBAPP_PORT -sp $WEBSERVICE_PORT -d $QWAZR_DATA"
OSS_LOG=/var/log/qwazr/server.out
OSS_PID="/var/run/$OSS_NAME.pid"
OSS_USER=qwazr

export QWAZR_MASTERS QWAZR_SERVICES

usage ()
{
  echo "Usage : $0 {start|stop|restart}"
  exit
}

if [ "$#" -ne 1 ]
then
  usage
fi

case $1 in
start)
        if [ -f $OSS_PID ]; then
            echo "$OSS_NAME is already running ..."
        else
            echo "Starting $OSS_NAME ..."
            PID=`su -m -c "/usr/bin/java $OSS_OPTS" $OSS_USER >> $OSS_LOG 2>&1 & echo $!`
            if [ -z $PID ]; then
               echo "$OSS_NAME starting failed"
            else
               echo $PID > $OSS_PID
               echo "$OSS_NAME started ..."
            fi
        fi
        ;;
stop)
        if [ -f $OSS_PID ]; then
            echo "Stopping $OSS_NAME ..."
            PID=`cat $OSS_PID`
            kill $PID
            echo "$OSS_NAME stopped ..."
            rm $OSS_PID
        else
            echo "$OSS_NAME is not running ..."
        fi
        ;;
status)
        if [ -f $OSS_PID ]; then
            PID=`cat $OSS_PID`
            if kill -0 $PID; then
                echo "$OSS_NAME pid: $PID"
            else
                echo "PID not valid"
                rm $OSS_PID
            fi
        else
            echo "$OSS_NAME is not running ..."
        fi
        ;;
restart|force-reload)
        $0 stop
        $0 start
        ;;
esac
exit 0
